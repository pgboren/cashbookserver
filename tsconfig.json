{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true, // <---
    "emitDecoratorMetadata": true,  // <---
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  // "include": ["src/**/*.ts"],
  // "exclude": ["node_modules"]
}
